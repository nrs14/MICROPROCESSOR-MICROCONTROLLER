ORG 0000H
SETB P2.2; TURN OFF THE LED
CLR TR0; STOP TIMER 0
MOV A,TMOD;
ANL A,#0XF0;
ORL A,#0X01;
MOV TMOD,A;CONFIGURE TIMER 0 IN MODE 1 WITHOUT AFFECTING TIMER 1 OPERATION
BLINK:MOV TH0,#0XFC; LOAD HIGHER BYTE OF COUNT VALUE
MOV TL0,#0X18; LOAD LOWER BYTE OF COUNT VALUE
SETB TR0
JNB TF0,$
CPL P2.2
CLR TF0
CLR TR0
SJMP BLINK
